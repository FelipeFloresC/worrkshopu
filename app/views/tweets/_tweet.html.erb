<div class="card">
  <div class="card-header">
    <%= tweet.user.full_name %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= tweet.body %></p>
      <footer class="blockquote-footer"><%= tweet.creation_date %></footer>
      <footer class="blockquote-footer"><%= tweet.list_hashtags %></footer>
      <%= link_to 'Ver', tweet, class:'btn btn-primary mt-2' %>
      <%= button_to 'Eliminar', tweet_path(tweet), method: :delete, class:'btn btn-danger mt-2' %>
    </blockquote>
  </div>
</div>